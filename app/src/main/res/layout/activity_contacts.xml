<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsActivity">

    <ListView
        android:id="@+id/listViewContacts"
        android:layout_width="336dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/listViewContacts" />

    <Button
        android:id="@+id/buttonReadStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReadStorage"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDisplay"
        app:layout_constraintEnd_toEndOf="@+id/listViewContacts"
        app:layout_constraintTop_toTopOf="@+id/buttonDisplay" />

    <Button
        android:id="@+id/buttonBookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOKMARKS"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDisplay"
        app:layout_constraintEnd_toStartOf="@+id/buttonReadStorage"
        app:layout_constraintStart_toEndOf="@+id/buttonDisplay"
        app:layout_constraintTop_toTopOf="@+id/buttonDisplay" />
</android.support.constraint.ConstraintLayout>